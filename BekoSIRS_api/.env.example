# BekoSIRS Backend Environment Variables
# Copy this file to .env and update values for your environment

# =============================================================
# REQUIRED VARIABLES (Django will not start without these)
# =============================================================

# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-generate-with-above-command

# Database Configuration
DB_NAME=Beko_stok
DB_USER=sa
DB_PASSWORD=your-secure-password-here
DB_HOST=localhost
DB_PORT=1433

# =============================================================
# OPTIONAL VARIABLES (have sensible defaults)
# =============================================================

# Set to True only in development
DEBUG=True

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,192.168.1.6

# Admin panel path (security: don't use /admin/)
ADMIN_PATH=secure-backend-panel-2026/

# CORS Settings (set CORS_ALLOW_ALL_ORIGINS=True only in development)
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8081,http://192.168.1.6:5173

# =============================================================
# EMAIL SETTINGS (for password reset and notifications)
# =============================================================
# Leave these commented out for development (emails print to console)
# Uncomment and fill in for production SMTP

# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=BekoSIRS <noreply@bekosirs.com>

# Frontend URL (used in password reset emails)
FRONTEND_URL=http://localhost:5173

# Redis URL (for production caching)
# REDIS_URL=redis://127.0.0.1:6379/1


# BekoSIRS Backend - Production Environment Variables
# Copy to /var/www/bekosirs/.env on production server

# =============================================================
# CRITICAL: CHANGE THESE IN PRODUCTION!
# =============================================================

# Generate new secret key:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY_IN_PRODUCTION

# Database (Microsoft SQL Server)
DB_NAME=BekoSIRS_Production
DB_USER=bekosirs_user
DB_PASSWORD=STRONG_PASSWORD_HERE
DB_HOST=localhost
DB_PORT=1433

# =============================================================
# SECURITY SETTINGS
# =============================================================

DEBUG=False
ALLOWED_HOSTS=api.bekosirs.com,bekosirs.com

# =============================================================
# CORS SETTINGS
# =============================================================

CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://bekosirs.com,https://www.bekosirs.com,https://app.bekosirs.com

# =============================================================
# EMAIL SETTINGS (SMTP)
# =============================================================

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@bekosirs.com
EMAIL_HOST_PASSWORD=your_app_password_here
DEFAULT_FROM_EMAIL=BekoSIRS <noreply@bekosirs.com>

# =============================================================
# REDIS CACHE (Required for production)
# =============================================================

REDIS_URL=redis://127.0.0.1:6379/1

# =============================================================
# FRONTEND URL
# =============================================================

FRONTEND_URL=https://app.bekosirs.com

# =============================================================
# OPTIONAL: MONITORING & LOGGING
# =============================================================

# Sentry DSN (for error tracking)
# SENTRY_DSN=https://xxxx@sentry.io/xxxxx

# =============================================================
# NOTES
# =============================================================
# - Never commit this file with real credentials to git
# - Ensure file permissions are 600 (readable only by owner)
# - Regularly rotate SECRET_KEY and passwords
# - Use strong, unique passwords for all services
